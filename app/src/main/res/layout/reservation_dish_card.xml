<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_dish_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/dish_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dish_image"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Description"/>
            <TextView
                android:id="@+id/dish_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dish_description_title"
                android:text="Dish Description"/>
            <TextView
                android:id="@+id/dish_availability_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Availability"
                android:layout_below="@id/dish_description"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/dish_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dish_availability_title"
                android:layout_alignParentLeft="true"
                android:text="Dish Availability" />
            <TextView
                android:id="@+id/dish_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Price"
                android:layout_below="@id/dish_description"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/dish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dish_price_title"
                android:layout_alignParentRight="true"
                android:text="Dish Price"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>