<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sorbellini.s214631.lab2.MainActivity"
    tools:showIn="@layout/activity_main">
    <ImageView
        android:id="@+id/details"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_image_test"
        android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:layout_below="@id/details"/>
    <ImageView
        android:id="@+id/daily_offer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_image_test"/>
        <TextView
            android:id="@+id/daily_offer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:layout_alignParentRight="true"
            android:layout_below="@id/daily_offer"/>
    <ImageView
        android:id="@+id/reservation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/daily_offer_text"
        android:src="@drawable/ic_image_test"/>
    <TextView
        android:id="@+id/reservation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/reservation"/>

</RelativeLayout>
